{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem</h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control my-2" value="{{postagem.titulo}}" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control my-2" value="{{postagem.slug}}" required>
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control my-2" value="{{postagem.descricao}}" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control my-2">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categories}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-3" type="submit">Editar post</button>
        </form>
    </div>
</div>