<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categories/add">
<button class="btn btn-success">Nova categoria</button>
</a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <small>Created: {{date}}</small><br>
            <div style="display: flex; flex-direction:row">
                <a href="/admin/categories/edit/{{_id}}">
                    <button class="btn btn-success mt-3">Editar categoria</button>
                </a>
                <form action="/admin/categories/delete" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger ms-3 mt-3">Deletar categoria</button>
                </form>
            </div>
            
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}