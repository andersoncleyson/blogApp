<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categories/add">
<button class="btn btn-success">Nova categoria</button>
</a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <small>Created: {{date}}</small><br>
            <a href="/admin/categories/edit/{{_id}}">
                <button class="btn btn-success mt-3">Editar categoria</button>
            </a>
        </div>
    </div>
{{else}}

{{/each}}