<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add">
<button class="btn btn-success">Novo post</button>
</a>


{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar post</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button class="btn btn-danger mt-3">Deletar post</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada</p>
{{/each}}